// Prisma Client 생성 설정
generator client {
    provider = "prisma-client"
    output   = "../generated/prisma"
}

// 데이터베이스 연결 설정
datasource db {
    provider = "postgresql"
}

model Study {
    id          String   @id @default(cuid())
    nickname    String // 생성자 닉네임
    name        String // 스터디 이름
    description String // 스터디 소개글
    background  String // 배경 컬러 / 이미지 코드
    password    String // 관리용 비밀번호
    points      Int      @default(0) // 스터디 누적 포인트
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    habits    Habit[]
    emojiLogs EmojiLog[]
}

model Habit {
    id      String @id @default(cuid())
    studyId String
    name    String // 습관 이름

    study   Study         @relation(fields: [studyId], references: [id])
    records HabitRecord[]
}

model HabitRecord {
    id        String   @id @default(cuid())
    habitId   String
    checkDate DateTime // 수행한 날짜 (YYYY-MM-DD)

    habit Habit @relation(fields: [habitId], references: [id], onDelete: Cascade)
}

model EmojiLog {
    id        String @id @default(cuid())
    studyId   String
    emojiType String // 이모지 종류
    count     Int    @default(1)

    study Study @relation(fields: [studyId], references: [id], onDelete: Cascade)
}
